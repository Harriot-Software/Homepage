    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <link rel="canonical" href="https://harriot.fi/contact" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="css/navigation.css" />
    <link rel="stylesheet" href="css/common.css" />
    <link rel="stylesheet" href="css/contact.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
          integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf"
          crossorigin="anonymous">
</head>
<body>

<% include assets/navigation.html %>

<div class="page">
    <h1 class="page__title">
        <img src="img/Page_titles_contact.png" alt="CONTACT US" />
    </h1>

    <div class="container">
        <div class="sidebar">
            <button class="social-icon facebook" type="button">
                <span><i class="fab fa-facebook-f fa-2x"></i></span>
            </button>
            <button class="social-icon linkedin" type="button">
                <span><i class="fab fa-linkedin-in fa-2x"></i></span>
            </button>
            <button class="social-icon github" type="button">
                <span><i class="fab fa-github fa-2x"></i></span>
            </button>
        </div>

        <div class="message_success hidden">
            Your message was sent successfully. We'll get back to you shortly.
        </div>

        <div class="message_error hidden">
            Something went wrong while sending your message. Please try again later.
        </div>

        <form action="/contact-submit"
              enctype="application/x-www-form-urlencoded"
              class="contact-form"
              id="contact-form"
              method="POST">

        <fieldset class="email-step active" id="step-email-details">
                <div class="email-step__title">
                    <h2>
                        <span>Send us</span> an email with the form below!
                    </h2>
                    <p>
                        You won't need to sign in to send a message.
                    </p>
                    <p>
                        Your information will only be used to contact you regarding your inquiry.
                    </p>
                </div>
                <div>
                    <label for="first-name">
                        First name:
                    </label>
                    <div class="form-error hidden" id="first-name-error">
                        Enter a name!
                        <i class="fas fa-sort-up fa-2x"></i>
                    </div>
                    <input type="text"
                           id="first-name"
                           name="first_name"
                           placeholder="First name"
                           required />
                </div>
                <div>
                    <label for="last-name">
                        Last name:
                    </label>
                    <div class="form-error hidden" id="last-name-error">
                        Enter a name!
                        <i class="fas fa-sort-up fa-2x"></i>
                    </div>
                    <input type="text"
                           id="last-name"
                           name="last_name"
                           placeholder="Last name"
                           required />
                </div>
                <div>
                    <label for="email-address">
                        Contact email:
                    </label>
                    <div class="form-error hidden" id="email-address-error">
                        Enter an email address!
                        <i class="fas fa-sort-up fa-2x"></i>
                    </div>
                    <div class="form-error hidden" id="email-address-error-invalid">
                        Address is invalid!
                        <i class="fas fa-sort-up fa-2x"></i>
                    </div>
                    <input type="email"
                           id="email-address"
                           name="email_address"
                           placeholder="Email address"
                           required />
                </div>
                <div>
                    <label for="company-name">
                        Company (optional):
                    </label>
                    <input type="text"
                           id="company-name"
                           name="company_name"
                           placeholder="Company (optional)">
                </div>
            </fieldset>

            <!-- Currently scrapped second step

            <fieldset class="email-step" id="step-email-title">
                <div class="email-step__title">
                    <h2>
                        <span>Select</span> a subject for you email.
                    </h2>
                    <p>
                        If multiple apply, pick the most relevant.
                    </p>
                </div>
                <label>
                    <input type="radio"
                           name="type-selectors"
                           id="title-website"
                           value="website" checked />
                    <span class="checkmark"><i class="fas fa-lg"></i></span>
                    <img src="img/SS_contact_icon_fullwebsite.png" alt="IMAGE" />
                </label>
                <label>
                    <input type="radio"
                           name="type-selectors"
                           id="title-website-nodesign"
                           value="website-nodesign"/>
                    <span class="checkmark"><i class="fas fa-lg"></i></span>
                    <img src="img/SS_contact_icon_nodesignwebsite.png" alt="IMAGE" />
                </label>
            </fieldset>

            -->

            <fieldset class="email-step" id="step-email-body">
                <div class="email-step__title">
                    <h2>
                        <span>Write</span> your message.
                    </h2>
                    <!--<p>
                        HTML code is allowed for formatting.
                    </p>-->
                </div>
                <label>
                    <textarea id="email-body"
                              name="email_body"
                              placeholder="Your message..."
                              tabindex="-1"
                              required></textarea>
                </label>

                <div class="form-error hidden" id="email-body-error">
                    Please enter a message!
                    <i class="fas fa-sort-up fa-2x"></i>
                </div>
                <div class="form-error hidden" id="email-body-error-invalid">
                    Message contains forbidden characters!
                    <i class="fas fa-sort-up fa-2x"></i>
                </div>
            </fieldset>

            <div class="contact-form__controls">
                <div class="contact-form__controls__progress">
                    <div class="contact-form__controls__progress__bar">
                        <span class="contact-form__controls__progress__bar__content progress-50" id="progress-content"></span>
                    </div>
                </div>
                <div class="contact-form__controls__buttons">
                    <button type="button"
                            id="form-previous"
                            disabled>
                        Previous
                    </button>
                    <button type="button"
                            id="form-next">
                        Next step
                    </button>
                    <input type="submit"
                           class="hide"
                           id="form-send"
                           value="Send my message!" />
                </div>
            </div>
        </form>
    </div>
</div>

<!-- SCRIPTS -->
<script type="text/javascript" src="js/navigation.js"></script>
<script type="text/javascript" src="js/contact.js"></script>

</body>
</html>